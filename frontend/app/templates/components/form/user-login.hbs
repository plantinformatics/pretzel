{{! login form; the fields must be named "identification" and "password"; the controller action is "authenticate" }}
{{!--<a {{action 'authenticateWithFacebook'}} class="btn btn-default" style="cursor: pointer;">Login with Facebook</a>
<hr/>
<a {{action 'authenticateWithGoogleImplicitGrant'}} class="btn btn-default" style="cursor: pointer;">Login with Google (Implicit Grant)</a>
<hr/>--}}
{{!--<p>or login with OAuth 2.0 <em>Resource Owner Password Credentials</em>:</p>--}}
{{#form/auth-base title="Log In" errorMessage=this.errorMessage}}
  <form {{action 'submitForm' on='submit'}}>
    {{auth-input
      type='text'
      value=this.identification
      autocomplete="username"
      placeholder='Email Address'}}

    {{auth-input
      type=this.passwordInputType
      value=this.password
      autocomplete="current-password"
      placeholder='Password'}}

    <div>
      <span style="margin-left: 3em;">
        {{input type="checkbox" checked=this.revealPassword
          id="checkbox-revealPassword" }}
        <label for="checkbox-revealPassword" title="Show Password">
          <i class="glyphicon glyphicon-eye-open"></i></label>
        {{#ember-tooltip side="right" delay=500}}
          Show password input
        {{/ember-tooltip}}
      </span>
    </div>

    {{suggest-link
      suggest-text="Forgotten your password?"
      link-name="reset-request"
      link-pretty="Reset Password"}}
    {{suggest-link
      suggest-text="Need an account?"
      link-name="signup"
      link-pretty="Sign Up"}}   
    {{elem/button-submit loading=this.isProcessing}}
  </form>
{{/form/auth-base}}
