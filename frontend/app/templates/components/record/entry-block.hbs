{{#if editing }}
  <div class="input-group">
    {{input
      enter=(action "saveEdit" entry)
      escape-press=(action "cancelEdit" entry)
      type="text"
      value=entry.name
      class="form-control"
      placeholder="Placeholder"}}
    <span class="input-group-btn">
      {{elem/button-base
        icon="ok"
        classColour="success"
        onClick=(action "saveEdit" entry)
      }}
      {{elem/button-base
        icon="remove"
        classColour="danger"
        onClick=(action "cancelEdit" entry)
      }}
    </span>
  </div>
{{else}}
  {{log 'entry.isViewed' entry.id entry.isViewed}}
  {{#if entry.isViewed}}
  {{else}}
    {{elem/button-base
      onClick=(action 'get' entry)
      classSize='xs'
      classColour='success'
      icon='plus'}}
  {{/if}}
  {{entry.name}}
  {{#if entry.datasetId.editable }}
    {{#elem/dropdown-container
      right=true}}
      {{#elem/dropdown-row
        icon="pencil"
        onClick=(action 'enableEdit' entry)}}
        Edit
      {{/elem/dropdown-row}}
      {{#if entry.datasetId.owner }}
        {{elem/dropdown-separator}}
        {{#elem/dropdown-row
          icon="remove"
          onClick=(action "deleteRecord" entry)}}
          Delete
        {{/elem/dropdown-row}}
      {{/if}}
    {{/elem/dropdown-container}}
  {{/if}}
{{/if}}
