{{#if this.editing }}
  <div class="input-group">
    {{input
      enter=(action "saveEdit" this.entry)
      escape-press=(action "cancelEdit" this.entry)
      type="text"
      value=this.entry.name
      class="form-control"
      placeholder="Placeholder"}}
    <span class="input-group-btn">
      {{elem/button-base
        icon="ok"
        classColour="success"
        onClick=(action "saveEdit" this.entry)
      }}
      {{elem/button-base
        icon="remove"
        classColour="danger"
        onClick=(action "cancelEdit" this.entry)
      }}
    </span>
  </div>
{{else}}
  {{this.entry.name}}
  {{elem/icon-acl record=this.entry}}
  {{#if this.entry.editable }}
    {{#elem/dropdown-container
      right=true}}
      {{#elem/dropdown-row
        icon="pencil"
        onClick=(action 'enableEdit' this.entry)}}
        Edit
      {{/elem/dropdown-row}}
      {{#if this.entry.owner }}
        {{#elem/dropdown-row
          icon="lock"
          onClick=(action 'flipPublic' this.entry)}}
          {{#if this.entry.public}}
          Make Private
          {{else}}
          Make Public
          {{/if}}
        {{/elem/dropdown-row}}
        {{#elem/dropdown-row
          icon="pencil"
          onClick=(action 'flipReadOnly' this.entry)}}
          {{#if this.entry.readOnly}}
          Make Editable
          {{else}}
          Make Read-Only
          {{/if}}
        {{/elem/dropdown-row}}
        {{elem/dropdown-separator}}
        {{#elem/dropdown-row
          icon="remove"
          onClick=(action "deleteRecord" this.entry)}}
          Delete
        {{/elem/dropdown-row}}
      {{else}}
        {{#if this.noAuth}}
          {{elem/dropdown-separator}}
          {{#elem/dropdown-row
            icon="remove"
            onClick=(action "deleteRecord" this.entry)}}
            Delete
          {{/elem/dropdown-row}}
        {{/if}}
      {{/if}}
    {{/elem/dropdown-container}}
  {{/if}}
{{/if}}