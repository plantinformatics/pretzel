{{!-- an extract from entry-block.hbs, sans the editing facilities, and with
  added identification because the block name is often block.scope, will be
  identical to the sibling elements because the blocks are grouped by scope.
  --}}

{{record/entry-block-add-button entry=this.entry loadBlock="loadBlock"}}
<span title={{this.entry.datasetId.name}}>
  {{or this.entry.datasetId._meta.explorerName this.entry.datasetId._meta.shortName this.entry.datasetId.shortName this.entry.datasetId.name }}
</span>
{{#if (compare this.entry.name '!==' this.entry.scope) }}
  <span class="blockInScope" title={{this.entry.name}}>{{this.entry.name}}</span>
{{/if}}


