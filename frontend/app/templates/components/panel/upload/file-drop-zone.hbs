{{!--
<FileUpload ... @accept= values are from :
https://developers.google.com/drive/api/v3/mime-types
...
application/vnd.google-apps.spreadsheet 	Google Sheets

https://developer.mozilla.org/en-US/docs/Web/HTTP/Basics_of_HTTP/MIME_types/Common_types
...
.gz 	GZip Compressed Archive 	application/gzip

.json 	JSON format 	application/json

.ods 	OpenDocument spreadsheet document 	application/vnd.oasis.opendocument.spreadsheet

.xls 	Microsoft Excel 	application/vnd.ms-excel
.xlsx 	Microsoft Excel (OpenXML) 	application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

.zip 	ZIP archive 	application/zip

.gff,.gff3,.gtf    General Feature Format  text/gff3

--}}

{{#let (file-queue name="datasets" onFileAdded=(action this.uploadSpreadsheet)) as |queue|}}
<FileDropzone @name="files" class="border border-primary" style="min-height: 15ex;" as |dropzone|>
  {{#if dropzone.active}}
    {{#if dropzone.valid}}
      Drop to upload
    {{else}}
      Invalid
    {{/if}}
  {{else if queue.files.length}}
    Uploading {{queue.files.length}} files. ({{queue.progress}}%)
  {{else}}
    <h4>Upload Spreadsheets</h4>
    <p>
      {{#if dropzone.supported}}
        Drag and drop Spreadsheets and JSON files onto this area to upload them or
      {{/if}}
      <!-- FileUpload
        @name="files"
        @for="upload-file"
        @multiple={{true}}>
        <a tabindex=0></a>
      </FileUpload -->

      <input
        type="file"
        accept="
	  application/json,
	  application/vnd.google-apps.spreadsheet,
	  application/vnd.oasis.opendocument.spreadsheet,
	  application/vnd.ms-excel,
	  application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,
	  application/gzip,
	  application/zip,
	  text/gff3
        "
        {{queue.selectFile}} {{!-- filter=this.validateFile --}}
        >
      <label>Add a Spreadsheet.</label>
    </p>
  {{/if}}
</FileDropzone>
{{/let}}


<div class="panel panel-primary"></div>
{{elem/panel-message
  successMessage=this.successMessage
  warningMessage=this.warningMessage
  errorMessage=this.errorMessage}}

<div>
  {{#each this.errors as |error|}}
    <div>{{error}}</div>
  {{/each}}
  {{#each this.warnings as |warning|}}
    <div>{{warning}}</div>
  {{/each}}
</div>

{{#if this.isProcessing}}
  {{#elem/panel-form
    name="info"
    heading="Processing..." }}
      {{this.progressMsg}}
  {{/elem/panel-form}}
{{/if}}
