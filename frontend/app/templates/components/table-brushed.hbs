<div class="pull-right">
  <input type="checkbox"
    checked={{this.stretchHorizontal}}
    oninput={{action this.stretchHorizontalChanged value="target.checked"}}  >
  <label>Column Stretch Horizontal</label>
  <input type="checkbox"
    style="margin-left: 3em;"
    checked={{this.autoColumnWidth}}
    oninput={{action this.autoColumnWidthChanged value="target.checked"}}  >
  <label>Auto Column Width</label>

  <input type="checkbox"
    style="margin-left: 3em;"
    checked={{this.editable}}
    oninput={{action (mut this.editable) value="target.checked"}}  >
  <label>Editable</label>

  <input type="checkbox"
    style="margin-left: 3em;"
    checked={{this.saveToDatabase}}
    oninput={{action (mut this.saveToDatabase) value="target.checked"}}  >
  <label>Save To Database</label>

</div>
<div style="clear:both"></div>


